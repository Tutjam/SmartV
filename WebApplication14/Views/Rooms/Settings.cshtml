@model IEnumerable<SmartHome.Models.Room>


@{
    ViewData["Title"] = "Ustawienia";
}

<h1> Ustawienia </h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj Pokój</a>
    <a asp-controller="Sensors" asp-action="Create" class="btn btn-primary">Dodaj czujnik</a>
    <a asp-action="Settings" class="btn btn-primary">Ustawienia</a>
    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-primary">Edycja konta</a>
</p>

<table class="table" style="float: left; width: 45%; background-color:darkblue" border="1">
    <thead>
        <tr>
            <td class="text-white">Nazwa pokoju</td>
            <td class="text-white">Opcje</td>
        </tr>
    </thead>
    <!--lista pokojow-->
    <tbody>
        @if (Model.Count()==0)
        {
            <tr>
                <td class="text-white" colspan="2">Brak dodanych pokojów.</td>
            </tr>
        }
        else
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-white">
                        <a asp-action="SeeSensor"> @Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Zmień nazwę</a> <font color="white">|</font>
                        <a asp-action="Delete" asp-route-id="@item.Id">Usuń pokój</a>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>
<table class="table" style="float: left; width: 20px; background-color:black" border="0"></table>
<table class="table" style="float: left; width: 45%; background-color:darkblue" border="1">
    <thead>
        <tr>
            <td class="text-white">Nazwa czujnika</td>
            <td class="text-white">Opcje</td>
        </tr>
    </thead>
    <!--lista sensorow-->
    <tbody>
        @if (Enumerable.Count(ViewBag.sensors)==0)
        {
            <tr>
                <td class="text-white" colspan="2">Brak dodanych czujników.</td>
            </tr>
        }
        else
        {
            @foreach (var item in ViewBag.sensors)
            {
                <tr>
                    <td class="text-white">
                        <a asp-action="SeeSensor"> @item.SensorName</a>
                    </td>

                    <td>
                        <a asp-controller="Sensors" asp-action="Edit" asp-route-id="@item.SensorId">Zmień nazwę</a> <font color="white">|</font>
                        <a asp-controller="Sensors" asp-action="Delete" asp-route-id="@item.SensorId">Usuń czujnik</a>
                    </td>

                </tr>
            }
        }
        </tbody>
</table>